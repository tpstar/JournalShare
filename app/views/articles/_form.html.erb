<%= form_for article do |f| %>

  <%= f.label :doi %>
  <%= f.text_field :doi %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.fields_for :journal do |j| %>
    <%= j.label :journal %>
    <%= j.select :id, options_for_select(@journals.collect{ |journal| [journal.name, journal.id] }) %>

    or, type the abbreviation of journal here!
    <%= j.text_field :name %>
  <% end %>
  <br>
  <%= f.label :year %>
  <%= f.number_field :year %>
  <br>
  <%= f.label :vol %>
  <%= f.number_field :vol %>
  <br>
  <%= f.label :issue %>
  <%= f.number_field :issue %>
  <br>
  <%= f.label :start_page %>
  <%= f.number_field :start_page %>
  <br>
  <%= f.submit %>
<% end %>
